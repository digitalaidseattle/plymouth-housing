      "rest": {
        "enabled": true,
        "path": "/items",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["read", "create", "update"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
