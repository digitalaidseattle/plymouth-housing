{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.6.68/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true
    },
    "host": {
      "mode": "@env('DAB_HOST_MODE')"
    }
  },
  "entities": {
    "Item": {
      "source": {
        "object": "dbo.Items",
        "type": "table",
        "key-fields": ["id"]
      },
      "rest": {
        "enabled": true,
        "path": "/items"
      },
      "permissions": [
        {
          "actions": ["read", "create", "update"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
        }
      ]
    },
    "ItemsWithCategory": {
      "source": {
        "object": "ItemsWithCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/itemswithcategory"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "ItemsByCategory": {
      "source": {
        "object": "ItemsByCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/itemsbycategory"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Category": {
      "source": {
        "object": "dbo.Categories",
        "type": "table",
        "key-fields": ["id"]
      },
      "rest": {
        "enabled": true,
        "path": "/categories"
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Building": {
      "source": {
        "object": "dbo.Buildings",
        "type": "table",
        "key-fields": ["id"]
      },
      "rest": {
        "enabled": true,
        "path": "/building"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Units": {
      "source": {
        "object": "dbo.Units",
        "type": "table",
        "key-fields": ["id"]
      },
      "rest": {
        "enabled": true,
