{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.1.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": true
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "host": {
      "cors": {
        "origins": ["http://localhost:4280", "http://localhost:3000"],
        "allow-credentials": true
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Item": {
      "source": {
        "object": "dbo.Items",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/items",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
        }
      ]
    },
    "ItemsWithCategory": {
      "source": {
        "object": "ItemsWithCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/itemswithcategory",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "ItemsByCategory": {
      "source": {
        "object": "ItemsByCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/itemsbycategory",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Category": {
      "source": {
        "object": "dbo.Categories",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/categories"
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Building": {
      "source": {
        "object": "dbo.Buildings",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/building",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Volunteer": {
      "source": {
        "object": "dbo.Volunteers",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/volunteers"
      },
      "permissions": [
        {
          "actions": ["read", "create", "update"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
        }
      ]
    },
    "VerifyPin": {
      "source": {
        "object": "dbo.VerifyVolunteerPin",
        "type": "stored-procedure"
      },
      "rest": {
        "enabled": true,
        "path": "/verify-pin"
      },
      "permissions": [
        {
          "actions": ["execute"],
          "role": "volunteer"
        }
      ]
    },
    "ProcessCheckout": {
      "source": {
        "object": "dbo.ProcessCheckout",
        "type": "stored-procedure"
      },
      "rest": {
        "enabled": true,
        "path": "/checkout-general-items"
      },
      "permissions": [
        {
          "actions": ["execute"],
          "role": "admin"
        },
        {
          "actions": ["execute"],
          "role": "volunteer"
        }
      ]
    },
    "ProcessWelcomeBasket": {
      "source": {
        "object": "dbo.ProcessWelcomeBasketCheckout",
        "type": "stored-procedure"
      },
      "rest": {
        "enabled": true,
        "path": "/checkout-welcome-basket"
      },
      "permissions": [
        {
          "actions": ["execute"],
          "role": "admin"
        },
        {
          "actions": ["execute"],
          "role": "volunteer"
        }
      ]
    }

  }
}
