      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Users": {
      "source": {
        "object": "dbo.Users",
        "type": "table",
        "key-fields": ["id"]
      },
      "rest": {
        "enabled": true,
        "path": "/users"
      },
      "permissions": [
        {
          "actions": ["read", "create", "update"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
        }
      ]
    },
    "Residents": {
      "source": {
